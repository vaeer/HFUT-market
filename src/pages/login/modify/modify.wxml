<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../../images/logo.png"></image>
  </view>
  <form bindsubmit="formSubmit" class="login-from">

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../../images/icon/name.png"></image>
      <label class="loginLab">账号:</label>
      <input class="inputText" name="username" placeholder='请输入账号' />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="nameImage" src="../../../images/icon/key.png"></image>
      <label class="loginLab">旧密码:</label>
      <input class="inputText" password="true" name="oldpwd" placeholder='请输入旧密码' />
    </view>
    <view class="line"></view>

    
    <view class="inputView">
      <image class="nameImage" src="../../../images/icon/key.png"></image>
      <label class="loginLab">新密码:</label>
      <input class="inputText" password="true" name="newpwd" placeholder='请输入6-16位新密码' />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type='primary' form-type='submit'>修改密码</button>
    </view>
  </form>
  <!--底部说明-->
</view>