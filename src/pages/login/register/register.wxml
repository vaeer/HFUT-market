<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../../../images/logo.png"></image>
  </view>
  <form bindsubmit="formSubmit" class="login-from">

    <!--名字-->
    <view class="inputView">
      <image class="nameImage" src="../../../images/icon/name.png"></image>
      <label class="loginLab">名字:</label>
      <input class="inputText" name="name" placeholder='请输入名字' />
    </view>
    <view class="line"></view>

    <!--账号-->
    <view class="inputView">
      <image class="nameImage" src="../../../images/icon/name.png"></image>
      <label class="loginLab">账号:</label>
      <input class="inputText" name="username" placeholder='请输入6-16位账号' />
    </view>
    <view class="line"></view>

    <!--密码-->
    <view class="inputView">
      <image class="nameImage" src="../../../images/icon/name.png"></image>
      <label class="loginLab">密码:</label>
      <input class="inputText" password="true" name="password" placeholder='请输入6-16位密码' />
    </view>

    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type='primary' form-type='submit'>注册</button>
    </view>
  </form>
  <!--底部说明-->
</view>