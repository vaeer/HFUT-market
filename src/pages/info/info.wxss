.top {
    background-color: #EA262C;
    padding: 20rpx;
    border-bottom: 2rpx solid #d0d0d0;
    position: relative;
    display: flex;
    align-content: center;
    height: 150rpx;
}

.userinfo-nickname{
    margin-left: 40rpx;
    margin-top: 40rpx;
    color: #fff;
}

.top image {
    height: 138rpx;
    width: 138rpx;
    margin: 0 40rpx;
    border-radius: 100rpx;
    border: 2rpx solid #d0d0d0;
}

.top:after {
    content: "";
    height: 16rpx;
    display: inline-block;
    width: 16rpx;
    border-right: 6rpx solid #c9c8cd;
    border-bottom: 6rpx solid #c9c8cd;
    transform: translateY(-50%) rotate(-45deg);
    margin-top: 6rpx;
    position: absolute;
    top: 50%;
    right: 50rpx;
}
