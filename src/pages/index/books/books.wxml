<!--index.wxml-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_select">
    <view class="weui-cell__hd weui-cell__hd_in-select-after">
      <view class="weui-label">校区</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="bindCampusChange" value="{{campusIndex}}" range="{{campus}}">
        <view class="weui-select weui-select_in-select-after">{{campus[3]}}</view>
      </picker>
    </view>
  </view>
</view>

<view class="weui-cells weui-cells_after-title">
    <navigator class="weui-media-box weui-media-box_text" >
      <view class="weui-media-box__title weui-media-box__title_in-text">
        时间简史</view>

      <view class="item_content">
        <image style="width:125px; height:200px" src="../../../images/icon/book1.jpg" mode="aspectFit" />
        <view class="item_content_left">

          <view class="weui-media-box__desc">ISBN： 9787535732309</view>
          <view wx:if="{{item.isTextbook}}" class="weui-media-box__desc">课外读物</view>
          <view class="weui-media-box__desc">成色：八成新</view>
          <view class="weui-media-box__desc">原价：36元</view>
          <view class="weui-media-box__desc">售价：24元</view>

        </view>
      </view>

      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta weui-media-time">2018-3-25</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">周致远</view>
      </view>
    </navigator>
    <navigator class="weui-media-box weui-media-box_text" >
      <view class="weui-media-box__title weui-media-box__title_in-text">
        高等数学第六版上册</view>

      <view class="item_content">
        <image style="width:125px; height:200px" src="../../../images/icon/book2.png" mode="aspectFit" />
        <view class="item_content_left">

          <view class="weui-media-box__desc">ISBN：9787040212778</view>
          <view wx:if="{{item.isTextbook}}" class="weui-media-box__desc">课程：基础课程</view>
          <view class="weui-media-box__desc">成色：少量笔记</view>
          <view class="weui-media-box__desc">原价：35元</view>
          <view class="weui-media-box__desc">售价：15元</view>

        </view>
      </view>

      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta weui-media-time">2018-3-23</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">李雷  </view>
      </view>
    </navigator>
</view>