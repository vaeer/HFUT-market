<!--index.wxml-->
<view class="weui-cells weui-cells_after-title">
  <view class="weui-cell weui-cell_select">
    <view class="weui-cell__hd weui-cell__hd_in-select-after">
      <view class="weui-label">校区</view>
    </view>
    <view class="weui-cell__bd">
      <picker bindchange="bindCampusChange" value="{{campusIndex}}" range="{{campus}}">
        <view class="weui-select weui-select_in-select-after">{{campus[3]}}</view>
      </picker>
    </view>
  </view>
</view>

<view class="weui-cells weui-cells_after-title">
    <navigator class="weui-media-box weui-media-box_text" >
      <view class="weui-media-box__title weui-media-box__title_in-text">
        小米5手机</view>

      <view class="item_content">
        <image style="width:125px; height:200px" src="../../../images/icon/phone1.jpg" mode="aspectFit" />
        <view class="item_content_left">

          <view class="weui-media-box__desc">简介：小米5至尊版，4G运存+64G内存...</view>
          <view class="weui-media-box__desc">原价：2366</view>
          <view class="weui-media-box__desc">售价：1666元</view>
        </view>
      </view>

      <view class="weui-media-box__info">
        <view class="weui-media-box__info__meta weui-media-time">2018-3-20</view>
        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">韩梅梅</view>
      </view>
    </navigator>
</view>